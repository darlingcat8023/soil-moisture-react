    "version": "0.2.0",
    "configurations": [

        {
            "name": "Next.js: debug server-side",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "serverReadyAction": {
                "pattern": "ready - started server on .+, url: (https?://.+)",
                "uriFormat": "%s",
                "action": "openExternally"
            }
        },
    ]
}